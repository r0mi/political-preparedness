<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="snackbarTextViewStyle">@style/SnackbarStyle</item>
    </style>

    <style name="SnackbarStyle" parent="@style/Widget.MaterialComponents.Snackbar.TextView">
        <item name="android:maxLines">5</item>
    </style>

    <style name="VoterInfoToolbarStyle" parent="@style/Widget.MaterialComponents.Toolbar.PrimarySurface">
        <item name="android:background">?attr/colorPrimaryVariant</item>
    </style>

    <style name="ElectionsSectionHeader">
        <item name="android:paddingTop">@dimen/default_padding</item>
        <item name="android:paddingBottom">@dimen/default_padding</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="VoterInfoSectionHeader">
        <item name="android:paddingTop">@dimen/double_padding</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RepresentativesSectionHeader" parent="ElectionsSectionHeader">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="RepresentativeTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RepresentativeName">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextInputStyle">
        <item name="android:textColorHint">@color/gray50</item>
    </style>

</resources>
